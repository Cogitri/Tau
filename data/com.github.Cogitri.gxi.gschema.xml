<?xml version="1.0" encoding="utf-8"?>

<schemalist>

    <schema path="/com/github/Cogitri/gxi/" id="com.github.Cogitri.gxi">

        <key name="theme-name" type="s">
            <default>"InspiredGitHub"</default>
            <summary>Xi-Editor's theme</summary>
            <description>
                Sets the theme used for the editing area
            </description>
        </key>

        <key name="draw-spaces" type="b">
            <default>false</default>
            <summary>Draw spaces</summary>
            <description>
                Visually draw spaces
            </description>
        </key>

        <key name="draw-tabs" type="b">
            <default>false</default>
            <summary>Draw tabs</summary>
            <description>
                Visually draw tabs
            </description>
        </key>

    </schema>

</schemalist>