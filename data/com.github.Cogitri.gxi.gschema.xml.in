<?xml version="1.0" encoding="utf-8"?>

<schemalist>

    <schema path="/com/github/Cogitri/gxi/" id="@app_id@">

        <key name="theme-name" type="s">
            <default>"InspiredGitHub"</default>
            <summary>Xi-Editor's theme</summary>
            <description>
                Sets the theme used for the editing area
            </description>
        </key>

        <key name="draw-trailing-spaces" type="b">
            <default>false</default>
            <summary>Draw trailing spaces</summary>
            <description>
                Draw spaces which are at the end of a line
            </description>
        </key>

        <key name="draw-right-margin" type="b">
            <default>false</default>
            <summary>Draw a right hand margin</summary>
            <description>
                Draw a right hand margin to limit the text width
            </description>
        </key>

        <key name="column-right-margin" type="u">
            <default>80</default>
            <summary>At what column to display the margin</summary>
            <description>
                Sets the column at which the margin should be drawn
            </description>
        </key>

        <key name="highlight-line" type="b">
            <default>false</default>
            <summary>Whether the current line should be highlighted</summary>
            <description>
                Sets if the current line should be highlighted, which eases navigation through the document
            </description>
        </key>
    </schema>

</schemalist>
